<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Validator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }

        input {
            padding: 10px;
            margin: 10px;
        }

        #result {
            margin-top: 20px;
            font-weight: bold;
        }

        .invalid {
            color: red;
        }

        .valid {
            color: green;
        }
    </style>
</head>
<body>

    <h1>Password Validator</h1>
    
    <label for="password">Enter your password:</label>
    <input type="password" id="password" oninput="validatePassword()">

    <div id="result"></div>

    <script>
        function validatePassword() {
            var password = document.getElementById("password").value;
            var resultElement = document.getElementById("result");

            // Check length
            if (password.length < 8 || password.length > 16) {
                resultElement.innerHTML = '<p class="invalid">Password must be 8-16 characters long</p>';
                return;
            }

            // Validate letters and at least one digit
            var letterRegex = /[a-zA-Z]/;
            var digitRegex = /\d/;
            if (!letterRegex.test(password) || !digitRegex.test(password)) {
                resultElement.innerHTML = '<p class="error">Password must contain letters and at least one digit.</p>';
                return;
            }


            // Check for full English words using an example dictionary API
            var dictionaryApiUrl = "https://api.dictionaryapi.dev/api/v2/entries/en_US/" + password.toLowerCase();
            fetch(dictionaryApiUrl)
                .then(response => response.json())
                .then(data => {
                    if (data.title && data.title === "No Definitions Found") {
                        resultElement.innerHTML = '<p class="valid">Password is valid</p>';
                    } else {
                        resultElement.innerHTML = '<p class="invalid">Password should not contain full English words</p>';
                    }
                })
                .catch(error => console.error("Error fetching dictionary API:", error));
        }
    </script>

</body>
</html>
